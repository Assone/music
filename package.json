{
  "name": "music",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "vue-cli-service lint",
    "changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "commit": "cz",
    "lint:style": "stylelint src/**/*.{html,vue,css,sass,scss}"
  },
  "dependencies": {
    "@sentry/tracing": "^6.2.5",
    "@sentry/vue": "^6.2.5",
    "@vueuse/core": "^4.9.1",
    "axios": "^0.21.1",
    "nprogress": "^0.2.0",
    "swiper": "^6.5.9",
    "vue": "^3.0.5",
    "vue-i18n": "^9.1.6",
    "vue-router": "4",
    "vue-slider-component": "^4.0.0-beta.3",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "lint-staged": "^10.5.4",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0",
    "@intlify/vite-plugin-vue-i18n": "^2.1.2",
    "@prettier/plugin-pug": "^1.15.2",
    "@rollup/plugin-eslint": "^8.0.1",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@vitejs/plugin-legacy": "^1.3.3",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vitejs/plugin-vue-jsx": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.5",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.2",
    "sass": "^1.32.12",
    "typescript": "^4.1.3",
    "vite": "^2.2.3",
    "vite-plugin-compression": "^0.2.4",
    "vite-plugin-pwa": "^0.7.3",
    "vite-plugin-svg-icons": "^0.5.0",
    "vue-tsc": "^0.0.24"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "lint-staged": {
    "*.{html,vue,css,sass,scss}": [
      "stylelint --fix"
    ]
  }
}
